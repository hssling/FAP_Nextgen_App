        "icon": "heart",
        "sections": [
            {
                "heading": "Danger Signs (Immediate Referral)",
                "content": [
                    "Unable to drink or breastfeed",
                    "Vomits everything",
                    "Convulsions",
                    "Lethargic or unconscious"
                ]
            },
            {
                "heading": "Cough or Difficult Breathing",
                "content": [
                    "Count respiratory rate (1 minute)",
                    "<2 months: ≥60/min = Fast breathing",
                    "2-12 months: ≥50/min = Fast breathing",
                    "1-5 years: ≥40/min = Fast breathing",
                    "Check for chest indrawing",
                    "Listen for stridor"
                ]
            },
            {
                "heading": "Diarrhea Assessment",
                "content": [
                    "Duration of diarrhea",
                    "Blood in stool?",
                    "Dehydration signs: Sunken eyes, skin pinch >2 sec, restless/irritable",
                    "Plan A: No dehydration - ORS at home",
                    "Plan B: Some dehydration - ORS at facility",
                    "Plan C: Severe dehydration - IV fluids, refer"
                ]
            },
            {
                "heading": "Fever Assessment",
                "content": [
                    "Malaria risk area? - RDT/Blood smear",
                    "Stiff neck? - Meningitis, refer",
                    "Measles now or within 3 months?",
                    "Any ear problem? - Check for ear discharge",
                    "Temperature >38.5°C - Give paracetamol"
                ]
            },
            {
                "heading": "Nutrition Assessment",
                "content": [
                    "Check for visible severe wasting",
                    "Check for bilateral pitting edema",
                    "Measure MUAC (6-59 months)",
                    "Red (<11.5cm) = SAM, refer",
                    "Yellow (11.5-12.5cm) = MAM",
                    "Green (>12.5cm) = Normal"
                ]
            }
        ]
